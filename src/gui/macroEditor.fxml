<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="450.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="Macro">
          <items>
            <MenuItem mnemonicParsing="false" onAction="#newMacro" text="New" />
            <MenuItem mnemonicParsing="false" onAction="#openMacro" text="Open…" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" onAction="#close" text="Close" />
            <MenuItem mnemonicParsing="false" onAction="#saverSave" text="Save" />
            <MenuItem mnemonicParsing="false" onAction="#saveAs" text="Save As…" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Quit" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
          <items>
                  <MenuItem mnemonicParsing="false" text="Available macro instructions" />
            <MenuItem mnemonicParsing="false" text="About MyHelloApp" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="407.0" prefWidth="648.0" style="-fx-background-color: #e6e6e6;" VBox.vgrow="ALWAYS">
      <children>
            <Label alignment="CENTER" contentDisplay="CENTER" layoutX="24.0" prefHeight="38.0" prefWidth="296.0" text="Macro Editor" textAlignment="CENTER">
               <font>
                  <Font size="22.0" />
               </font>
            </Label>
            <Button fx:id="saver" layoutX="356.0" layoutY="220.0" mnemonicParsing="false" onMousePressed="#saverSave" prefHeight="38.0" prefWidth="94.0" text="Save" />
            <Button layoutX="476.0" layoutY="220.0" mnemonicParsing="false" onMousePressed="#validate" prefHeight="38.0" prefWidth="119.0" text="Check your macro" />
            <TextArea fx:id="editor" layoutX="20.0" layoutY="38.0" prefHeight="382.0" prefWidth="305.0" promptText="Macro editor, to find available instructions see help.">
               <font>
                  <Font size="15.0" />
               </font>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </TextArea>
            <TextArea fx:id="messages" editable="false" layoutX="356.0" layoutY="69.0" opacity="0.67" prefHeight="108.0" prefWidth="239.0" />
            <TextArea editable="false" layoutX="403.0" layoutY="304.0" opacity="0.39" prefHeight="68.0" prefWidth="145.0" text="Press keys to set &#10;macro trigger">
               <font>
                  <Font size="14.0" />
               </font>
            </TextArea>
            <Label alignment="CENTER" contentDisplay="CENTER" layoutX="352.0" layoutY="19.0" prefHeight="38.0" prefWidth="239.0" text="Macro validation messages" textAlignment="CENTER">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <Button fx:id="saver1" layoutX="24.0" layoutY="7.0" mnemonicParsing="false" onMousePressed="#changeToMain" prefHeight="25.0" prefWidth="51.0" text="&lt;-" />
      </children>
    </AnchorPane>
  </children>
</VBox>
